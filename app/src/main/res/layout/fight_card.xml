<android.support.v7.widget.CardView android:id="@+id/fight_card"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_centerHorizontal="true"
    android:foregroundGravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/fight_top_bar"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fighter_1_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            app:srcCompat="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/fighter_2_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="end"
            app:srcCompat="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/fighter1_name"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:gravity="bottom|start"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fighter2_name"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:gravity="end"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fight_center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>
